<div class="container" style="max-width: 700px;">
  <h2 class="mb-3">{{exercise.name}}</h2>
  <img src="{{exercise.gifUrl}}" alt="{{exercise.name}}" class="img-fluid mb-3"/>
  <p><strong>Target Muscles:</strong> {{exercise.targetMuscles}}</p>
  <p><strong>Body Parts:</strong> {{exercise.bodyParts}}</p>
  <p><strong>Equipment:</strong> {{exercise.equipments}}</p>
  {{#if exercise.instructions.length}}
  <h4 class="mt-3">Instructions</h4>
  <ol>
    {{#each exercise.instructions}}
      <li>{{this}}</li>
    {{/each}}
  </ol>
  {{/if}}
</div>
